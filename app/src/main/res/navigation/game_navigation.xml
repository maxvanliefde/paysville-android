<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_navigation"
    app:startDestination="@id/launchRoundFragment">

    <fragment
        android:id="@+id/launchRoundFragment"
        android:name="be.thefluffypangolin.paysville.ui.game_launch_round.LaunchRoundFragment"
        android:label="fragment_game_launch_round"
        tools:layout="@layout/fragment_game_launch_round">
        <action
            android:id="@+id/action_launch_to_roundWithTimer"
            app:destination="@id/roundWithTimerFragment" />
        <action
            android:id="@+id/action_launch_to_roundNoTimer"
            app:destination="@id/roundNoTimerFragment" />
    </fragment>
    <fragment
        android:id="@+id/roundNoTimerFragment"
        android:name="be.thefluffypangolin.paysville.ui.game_round.RoundNoTimerFragment"
        android:label="fragment_round_no_timer"
        tools:layout="@layout/fragment_game_round_no_timer" />
    <fragment
        android:id="@+id/roundWithTimerFragment"
        android:name="be.thefluffypangolin.paysville.ui.game_round.RoundWithTimerFragment"
        android:label="fragment_round_with_timer"
        tools:layout="@layout/fragment_game_round_with_timer" />
</navigation>